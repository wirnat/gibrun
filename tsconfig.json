{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "types": [
            "node"
        ],
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"],
            "@types/*": ["types/*"],
            "@project-analyzer/*": ["tools/project-analyzer/*"],
            "@analyzer-types/*": ["tools/project-analyzer/types/*"],
            "@core/*": ["core/*"],
            "@tools/*": ["tools/*"],
            "@utils/*": ["utils/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}
